{
  "name": "template-lit-ts",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install && pnpx playwright install",
    "watch": "tsc --watch",
    "dev": "vite --host",
    "test": "pnpx playwright test",
    "build": "tsc && vite build --target=es2015",
    "preview": "vite preview --host",
    "lint": "eslint src/**/* --fix && prettier src/**/* --write"
  },
  "dependencies": {
    "lit": "^2.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@windicss/plugin-icons": "^1.0.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3",
    "vite": "^2.6.2",
    "vite-plugin-windicss": "^1.4.8",
    "windicss": "^3.1.8"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "ignorePatterns": [
      "dist/**"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "tsconfig.json"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/unbound-method": "off"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
